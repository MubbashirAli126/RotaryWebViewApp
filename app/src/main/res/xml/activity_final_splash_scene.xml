<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="2000">
       <KeyFrameSet>
           <KeyTimeCycle
               motion:motionTarget="@+id/iv_logo"
               motion:framePosition="53"
               motion:wavePeriod="1"
               motion:waveShape="triangle"
               android:rotation="90"
               motion:waveOffset="0" />
           <KeyAttribute
               motion:motionTarget="@+id/iv_logo"
               motion:framePosition="30"
               android:translationY="0dp"
               android:scaleX="1.0"
               android:scaleY="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/iv_logo"
               motion:framePosition="74"
               android:translationY="-120dp"
               android:scaleX="0.9"
               android:scaleY="0.9" />
           <KeyAttribute
               motion:motionTarget="@+id/mtv_title"
               motion:framePosition="53"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/mtv_title"
               motion:framePosition="64"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/mtv_title"
               motion:framePosition="55"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/mtv_title"
               motion:framePosition="0"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/mtv_title"
               motion:framePosition="58"
               android:alpha="0.0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/iv_logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="-110dp"
            android:scaleX="0.8"
            android:scaleY="0.8" />
        <Constraint
            android:id="@+id/mtv_title"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="30dp" />
        <Constraint
            android:id="@+id/main_ll"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="-10dp" />
    </ConstraintSet>
</MotionScene>